<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="5dp"
              android:layout_marginTop="2dp"
              android:background="#71000000">
  <TextView android:id="@+id/weather_paderborn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11sp"
            android:gravity="left"
            android:text="@string/city_paderborn"/>
  <TextView android:id="@+id/weather_bonn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="5dp"
              android:textColor="#ffffff"
              android:textStyle="bold"
              android:textSize="11sp"
              android:gravity="left"
              android:text="@string/city_bonn"/>
  <TextView android:id="@+id/weather_freiburg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:layout_marginBottom="7dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="11sp"
            android:gravity="left"
            android:text="@string/city_freiburg"/>
  <Button android:id="@+id/refresh_button"
          android:layout_width="fill_parent"
          android:layout_height="fill_parent"
          android:textColor="#ffffff"
          android:background="#20000000"
          android:textSize="10sp"
          android:text="@string/refresh"/>
</LinearLayout>
