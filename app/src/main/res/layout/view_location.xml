<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical">
  <RelativeLayout android:id="@+id/caption_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#10000000">
    <TextView android:id="@+id/caption"
              android:layout_alignParentLeft="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:textStyle="bold"
              android:textSize="16sp"
              android:paddingLeft="5dp"/>
    <ImageButton android:id="@+id/diagram_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toLeftOf="@+id/forecast_button"
                 android:background="#00000000"
                 android:visibility="gone"
                 android:paddingRight="7dp"
                 android:src="@drawable/ic_action_picture"/>
    <ImageButton android:id="@+id/forecast_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toLeftOf="@+id/resize_button"
                 android:background="#00000000"
                 android:visibility="gone"
                 android:paddingRight="7dp"
                 android:src="@drawable/ic_action_forecast"/>
    <ImageButton android:id="@+id/resize_button"
                 android:layout_alignParentRight="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#00000000"
                 android:src="@drawable/ic_action_expand"/>
  </RelativeLayout>

  <GridLayout android:id="@+id/grid_current"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:rowCount="12"
              android:columnCount="2"
              android:paddingLeft="5dp">
    <TextView android:id="@+id/label_temperature"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_row="0"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/temperature"/>
    <TextView android:id="@+id/temperature"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:paddingLeft="10dp"
              android:layout_row="0"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_humidity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_row="1"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/humidity"/>
    <TextView android:id="@+id/humidity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:layout_row="1"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_barometer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_row="2"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/barometer"/>
    <TextView android:id="@+id/barometer"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:layout_row="2"
              android:layout_column="1"
              android:visibility="gone"/>

    <TextView android:id="@+id/label_solarradiation"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_row="3"
              android:layout_column="0"
              android:textStyle="bold"
              android:visibility="gone"
              android:text="@string/solarradiation"/>
    <TextView android:id="@+id/solarradiation"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:layout_row="3"
              android:layout_column="1"
              android:visibility="gone"/>

    <TextView android:id="@+id/label_uv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_row="4"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/uvindex"/>
    <TextView android:id="@+id/uv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:layout_row="4"
              android:layout_column="1"
              android:visibility="gone"/>

    <TextView android:id="@+id/label_rain_last_hour"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="5"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/rain_last_hour"/>
    <TextView android:id="@+id/rain_last_hour"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="5"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_rain_today"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="6"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/rain_today"/>
    <TextView android:id="@+id/rain_today"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="6"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_wind_speed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="7"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/wind_speed"/>
    <TextView android:id="@+id/wind_speed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="7"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_wind_gust"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="8"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/wind_gust"/>
    <TextView android:id="@+id/wind_gust"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="8"
              android:layout_column="1"/>


    <TextView android:id="@+id/label_solar_output"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="9"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/solar_output"/>
    <TextView android:id="@+id/solar_output"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="9"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_power_production"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="10"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/power_production"/>
    <TextView android:id="@+id/power_production"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="10"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_power_feed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="11"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/power_feed"/>
    <TextView android:id="@+id/power_feed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="11"
              android:layout_column="1"/>
  </GridLayout>

  <androidx.compose.ui.platform.ComposeView
          android:id="@+id/compose_view_statistics"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
  </androidx.compose.ui.platform.ComposeView>
</LinearLayout>
