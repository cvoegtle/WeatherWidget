<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:orientation="vertical">
  <RelativeLayout android:id="@+id/caption_layout"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#10000000">
    <TextView android:id="@+id/caption"
              android:layout_alignParentLeft="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:textStyle="bold"
              android:textSize="16sp"
              android:paddingLeft="5dp"/>
    <ImageButton android:id="@+id/diagram_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toLeftOf="@+id/forecast_button"
                 android:background="#00000000"
                 android:visibility="gone"
                 android:paddingRight="7dp"
                 android:src="@drawable/ic_action_picture"/>
    <ImageButton android:id="@+id/forecast_button"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toLeftOf="@+id/resize_button"
                 android:background="#00000000"
                 android:visibility="gone"
                 android:paddingRight="7dp"
                 android:src="@drawable/ic_action_forecast"/>
    <ImageButton android:id="@+id/resize_button"
                 android:layout_alignParentRight="true"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="#00000000"
                 android:src="@drawable/ic_action_expand"/>
  </RelativeLayout>

  <GridLayout android:id="@+id/grid_current"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:rowCount="5"
              android:columnCount="2"
              android:paddingLeft="5dp">
    <TextView android:id="@+id/label_temperature"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_row="0"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/temperature"/>
    <TextView android:id="@+id/temperature"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:paddingLeft="10dp"
              android:layout_row="0"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_humidity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_row="1"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/humidity"/>
    <TextView android:id="@+id/humidity"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dp"
              android:layout_row="1"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_rain_last_hour"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="2"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/rain_last_hour"/>
    <TextView android:id="@+id/rain_last_hour"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="2"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_rain_today"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="3"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/rain_today"/>
    <TextView android:id="@+id/rain_today"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="3"
              android:layout_column="1"/>

    <TextView android:id="@+id/label_solar_output"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_row="4"
              android:layout_column="0"
              android:visibility="gone"
              android:textStyle="bold"
              android:text="@string/solar_output"/>
    <TextView android:id="@+id/solar_output"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:visibility="gone"
              android:paddingLeft="10dp"
              android:layout_row="4"
              android:layout_column="1"/>
  </GridLayout>

  <GridLayout android:id="@+id/more_data"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:rowCount="5"
              android:columnCount="5"
              android:paddingTop="8dp"
              android:paddingLeft="5dp">
    <TextView android:layout_row="0"
              android:layout_column="1"
              android:text="@string/rain"
              android:textStyle="bold"
              android:paddingLeft="20dp"/>
    <TextView android:layout_row="0"
              android:layout_column="2"
              android:text="@string/min_temperature"
              android:textStyle="bold"
              android:paddingLeft="20dp"/>
    <TextView android:layout_row="0"
              android:layout_column="3"
              android:text="@string/max_temperature"
              android:textStyle="bold"
              android:paddingLeft="20dp"/>
    <TextView android:id="@+id/caption_kwh"
              android:layout_row="0"
              android:layout_column="4"
              android:text="@string/kwh"
              android:textStyle="bold"
              android:paddingLeft="32dp"
              android:visibility="gone"/>

    <TextView android:layout_row="1"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/today"/>
    <TextView android:id="@+id/today_rain"
              android:layout_row="1"
              android:layout_column="1"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/today_min_temperature"
              android:layout_row="1"
              android:layout_column="2"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/today_max_temperature"
              android:layout_row="1"
              android:layout_column="3"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/today_kwh"
              android:layout_row="1"
              android:layout_column="4"
              android:layout_gravity="right"/>

    <TextView android:layout_row="2"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/yesterday"/>
    <TextView android:id="@+id/yesterday_rain"
              android:layout_row="2"
              android:layout_column="1"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/yesterday_min_temperature"
              android:layout_row="2"
              android:layout_column="2"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/yesterday_max_temperature"
              android:layout_row="2"
              android:layout_column="3"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/yesterday_kwh"
              android:layout_row="2"
              android:layout_column="4"
              android:layout_gravity="right"/>

    <TextView android:layout_row="3"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/week"/>
    <TextView android:id="@+id/week_rain"
              android:layout_row="3"
              android:layout_column="1"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/week_min_temperature"
              android:layout_row="3"
              android:layout_column="2"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/week_max_temperature"
              android:layout_row="3"
              android:layout_column="3"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/week_kwh"
              android:layout_row="3"
              android:layout_column="4"
              android:layout_gravity="right"/>

    <TextView android:layout_row="4"
              android:layout_column="0"
              android:textStyle="bold"
              android:text="@string/month"/>
    <TextView android:id="@+id/month_rain"
              android:layout_row="4"
              android:layout_column="1"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/month_min_temperature"
              android:layout_row="4"
              android:layout_column="2"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/month_max_temperature"
              android:layout_row="4"
              android:layout_column="3"
              android:layout_gravity="right"/>
    <TextView android:id="@+id/month_kwh"
              android:layout_row="4"
              android:layout_column="4"
              android:layout_gravity="right"/>
  </GridLayout>
</LinearLayout>